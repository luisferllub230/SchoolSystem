@model SchoolSystem.Models.Student

@{
    ViewData["Title"] = "Delete Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card mt-3 border-dark">
    <div class="card-header bg-dark bg-gradient">
        <h4 class="text-center text-white">
            @ViewBag.Title
        </h4>
    </div>

    <div>
        <dl class="row m-2">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.StudentName)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.StudentName)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.StudentLastN)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.StudentLastN)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.StudentAge)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.StudentAge)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.StudentParent)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.StudentParent)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.StudentPhoneParent)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.StudentPhoneParent)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.StudentEmail)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.StudentEmail)
            </dd>
        </dl>
    
        
        <div class="card-footer">        
             <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a class="btn btn-primary" asp-action="Index">Back to List</a>
             </form>
        </div>
    </div>
</div>
