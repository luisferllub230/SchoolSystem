@model SchoolSystem.Models.Class

@{
    ViewData["Title"] = "Create New iten";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card mt-3 border-dark">
    <div class="card-header bg-dark bg-gradient">
        <h4 class="text-start text-white">
            @ViewBag.Title
        </h4>
    </div>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group m-2 fw-bold">
                    <label asp-for="ClassName" class="control-label m-1"></label>
                    <input asp-for="ClassName" class="form-control" />
                    <span asp-validation-for="ClassName" class="text-danger"></span>
                </div>
                <div class="form-group m-2 fw-bold">
                    <label asp-for="ClassRoom" class="control-label m-1"></label>
                    <input asp-for="ClassRoom" class="form-control" />
                    <span asp-validation-for="ClassRoom" class="text-danger"></span>
                </div>
                <div class="form-group card-footer">
                    <input type="submit" value="Create" class="btn btn-success" />
                     <a asp-action="Index" class="btn btn-primary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
