@model IEnumerable<SchoolSystem.Models.Class>

@{
    ViewData["Title"] = "Classes Administration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card mt-3 border-dark">
    <div class="card-header bg-dark bg-gradient">
        <h4 class="text-center text-white">
            @ViewBag.Title
        </h4>
    </div>

    <p>
    <a asp-action="Create" class="btn btn-success mt-2 ms-2">Create New</a>
    </p>

    <div class="table-responsive">
          <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ClassName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ClassRoom)
                    </th>
                    <th >
                    </th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr >
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassRoom)
                    </td>
                    <td>
                        <a class="btn btn-warning p-0 ps-2 pe-2 text-white" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a class="btn btn-primary p-0 ps-2 pe-2 text-white" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a class="btn btn-danger p-0 ps-2 pe-2 text-white" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
   
</div>

